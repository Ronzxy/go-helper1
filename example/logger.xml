<?xml version="1.0" encoding="UTF-8"?>
<!--日志级别以及优先级排序: OFF > FATAL > ERROR > WARN > INFO > DEBUG > TRACE > ALL -->
<!--rollingInterval：logger能够自动滚动文件，设置滚动间隔秒数-->
<Configuration rollingInterval="60">
    <Properties>
        <!--日志输出格式-->
        <Property name="LOG_FORMAT">
            %{Name} - %{Time:yyyy-mm-dd HH:MM:SS.ms} - %{Level:5} - %{File}:%{Line:4} - %{Message}
        </Property>
        <!--日志写入路径-->
        <Property name="LOG_PATH">
            logs/
        </Property>
        <!--日志存储路径-->
        <Property name="LOG_STORAGE_PATH">
            logs/storage
        </Property>
    </Properties>
    <!--先定义所有的appender-->
    <Loggers>
    	<Logger name="Console" target="STDOUT">
            <!--日志格式，如果type不为text，LOG_FORMAT将被忽略-->
            <Format type="text">
                ${LOG_FORMAT}
            </Format>
            <Level>
                <!-- 允许大于等于 INFO 的日志 -->
                <Allow>INFO</Allow>
            </Level>
    	</Logger>

        <Logger name="FileTrace" target="FILE" fileName="${LOG_PATH}/trace.log"
                filePattern="${LOG_STORAGE_PATH}/%{date:yyyy/mm}/trace-%{date:yyyy-mm-dd}-%{i}.log.gz">
            <!--日志格式，如果type不为text，LOG_FORMAT将被忽略-->
            <Format type="json">
                ${LOG_FORMAT}
            </Format>
            <Level>
                <!-- 允许大于等于 TRACE 的日志 -->
                <Allow>TRACE</Allow>
                <!-- 拒绝大于等于 DEBUG 的日志 -->
                <Deny>DEBUG</Deny>
            </Level>
            <Rolling>
                <!-- 基于时间滚动，单位小时 -->
                <TimeBased>24</TimeBased>
                <!-- 基于尺寸滚动，单位MB -->
                <SizeBased>100</SizeBased>
                <!-- 同一文件最多历史文件数，设置值小于0为不限制 -->
                <KeepCount>16</KeepCount>
            </Rolling>
        </Logger>

        <Logger name="FileDebug" target="FILE" fileName="${LOG_PATH}/debug.log"
                filePattern="${LOG_STORAGE_PATH}/%{date:yyyy/mm}/debug-%{date:yyyy-mm-dd}-%{i}.log.gz">
            <!--日志格式，如果type不为text，LOG_FORMAT将被忽略-->
            <Format type="json">
                ${LOG_FORMAT}
            </Format>
            <Level>
                <!-- 允许大于等于 DEBUG 的日志 -->
                <Allow>DEBUG</Allow>
                <!-- 拒绝大于等于 INFO 的日志 -->
                <Deny>INFO</Deny>
            </Level>
            <Rolling>
                <!-- 基于时间滚动，单位小时 -->
                <TimeBased>24</TimeBased>
                <!-- 基于尺寸滚动，单位MB -->
                <SizeBased>100</SizeBased>
                <!-- 同一文件最多历史文件数，设置值小于0为不限制 -->
                <KeepCount>16</KeepCount>
            </Rolling>
        </Logger>

    	<Logger name="FileInfo" target="FILE" fileName="${LOG_PATH}/info.log"
    				filePattern="${LOG_STORAGE_PATH}/%{date:yyyy/mm}/info-%{date:yyyy-mm-dd}-%{i}.log.gz">
            <!--日志格式，如果type不为text，LOG_FORMAT将被忽略-->
            <Format type="json">
                ${LOG_FORMAT}
            </Format>
            <Level>
                <!-- 允许大于等于 INFO 的日志 -->
                <Allow>INFO</Allow>
                <!-- 拒绝大于等于 WARN 的日志 -->
                <Deny>WARN</Deny>
            </Level>
            <Rolling>
                <!-- 基于时间滚动，单位小时 -->
                <TimeBased>24</TimeBased>
                <!-- 基于尺寸滚动，单位MB -->
                <SizeBased>100</SizeBased>
                <!-- 同一文件最多历史文件数，设置值小于0为不限制 -->
                <KeepCount>16</KeepCount>
            </Rolling>
    	</Logger>

    	<Logger name="FileWarn" target="FILE" fileName="${LOG_PATH}/warn.log"
    				filePattern="${LOG_STORAGE_PATH}/%{date:yyyy/mm}/warn-%{date:yyyy-mm-dd}-%{i}.log.gz">
            <!--日志格式，如果type不为text，LOG_FORMAT将被忽略-->
            <Format type="json">
                ${LOG_FORMAT}
            </Format>
            <Level>
                <!-- 允许大于等于 WARN 的日志 -->
                <Allow>WARN</Allow>
                <!-- 拒绝大于等于 ERROR 的日志 -->
                <Deny>ERROR</Deny>
            </Level>
            <Rolling>
                <!-- 基于时间滚动，单位小时 -->
                <TimeBased>24</TimeBased>
                <!-- 基于尺寸滚动，单位MB -->
                <SizeBased>100</SizeBased>
                <!-- 同一文件最多历史文件数，设置值小于0为不限制 -->
                <KeepCount>16</KeepCount>
            </Rolling>
    	</Logger>

        <Logger name="FileError" target="FILE" fileName="${LOG_PATH}/error.log"
                filePattern="${LOG_STORAGE_PATH}/%{date:yyyy/mm}/error-%{date:yyyy-mm-dd}-%{i}.log.gz">
            <!--日志格式，如果type不为text，LOG_FORMAT将被忽略-->
            <Format type="json">
                ${LOG_FORMAT}
            </Format>
            <Level>
                <!-- 允许大于等于 ERROR 的日志 -->
                <Allow>ERROR</Allow>
            </Level>
            <Rolling>
                <!-- 基于时间滚动，单位小时 -->
                <TimeBased>24</TimeBased>
                <!-- 基于尺寸滚动，单位MB -->
                <SizeBased>100</SizeBased>
                <!-- 同一文件最多历史文件数，设置值小于0为不限制 -->
                <KeepCount>16</KeepCount>
            </Rolling>
        </Logger>
    </Loggers>
</Configuration>
